{
	"info": {
		"_postman_id": "fitness-tdd-project",
		"name": "Fitness API Integration Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Reset DB (Setup)",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://localhost:5000/api/reset",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["api", "reset"]
				}
			}
		},
		{
			"name": "2. Get Classes (Positive)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Classes array exists\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.classes).to.be.an('array');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:5000/api/classes",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["api", "classes"]
				}
			}
		},
		{
			"name": "3. Make Reservation (Positive)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"member_id\": 999,\n    \"class_id\": 1\n}"
				},
				"url": {
					"raw": "http://localhost:5000/api/reservations",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["api", "reservations"]
				}
			}
		},
		{
			"name": "4. Duplicate Booking (Negative)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 400 for duplicate\", function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"pm.test(\"Error message is correct\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.error).to.include(\"Zaten\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"member_id\": 999,\n    \"class_id\": 1\n}"
				},
				"url": {
					"raw": "http://localhost:5000/api/reservations",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["api", "reservations"]
				}
			}
		},
		{
			"name": "5. Invalid Class ID (Negative)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 404\", function () {",
							"    pm.response.to.have.status(404);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"member_id\": 999,\n    \"class_id\": 99999\n}"
				},
				"url": {
					"raw": "http://localhost:5000/api/reservations",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["api", "reservations"]
				}
			}
		}
	]
}